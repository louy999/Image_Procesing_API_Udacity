// .tsconfig
{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"lib": ["ES6", "DOM"],
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"noImplicitAny": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"removeComments": true /* Do not emit comments to output. */
	},
	// "include": ["./src"],
	"exclude": ["node_modules", "spec", "build"]
}
